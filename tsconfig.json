{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "node_modules/**/*"
  ]
}
